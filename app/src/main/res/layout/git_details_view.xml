<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/detail_list_view"></ListView>

    <TableLayout
        android:id="@+id/details_table_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/details_repo_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_repo_id_label"
                android:layout_column="1"
                android:padding="5dp"
                android:text="Id" />

            <TextView
                android:id="@+id/detail_repo_id"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>

        <TableRow
            android:id="@+id/details_name_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/detail_name_label"
                android:layout_column="1"
                android:padding="5dp"
                android:text="@string/detail_name" />

            <TextView
                android:id="@+id/detail_name"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>

        <TableRow
            android:id="@+id/details_location_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/detail_location_label"
                android:layout_column="1"
                android:padding="5dp"
                android:text="Location" />

            <TextView
                android:id="@+id/detail_location"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>

        <TableRow
            android:id="@+id/details_email_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/detail_email_label"
                android:layout_column="1"
                android:padding="5dp"
                android:text="Email" />

            <TextView
                android:id="@+id/detail_email"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>

        <TableRow
            android:id="@+id/details_avatar_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/details_avatar_label"
                android:layout_column="1"
                android:padding="5dp"
                android:text="Avatar" />

            <ImageView
                android:id="@+id/details_avatar"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>